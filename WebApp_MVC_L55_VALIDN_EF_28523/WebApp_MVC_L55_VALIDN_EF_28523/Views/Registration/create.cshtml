@model WebApp_MVC_L55_VALIDN_EF_28523.Models.tblRegistration
@{
    ViewBag.Title = "create";
}

<h2>Registration Form</h2>

@using (Html.BeginForm("Create", "Registration", FormMethod.Post))
{
    @Html.HiddenFor(x => x.rid)
    <table>
        <tr>
            <td>Name:</td>
            <td>@Html.TextBoxFor(x => x.name)</td>
            <td style="color:red">@Html.ValidationMessageFor(x => x.name)</td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>@Html.TextBoxFor(x => x.email)</td>
            <td style="color:red">@Html.ValidationMessageFor(x => x.email)</td>
        </tr>
        <tr>
            <td>Password:</td>
            <td>@Html.TextBoxFor(x => x.password)</td>
            <td style="color:red">@Html.ValidationMessageFor(x => x.password)</td>
        </tr>
        <tr>
            <td>Age:</td>
            <td>@Html.TextBoxFor(x => x.age)</td>
            <td style="color:red">@Html.ValidationMessageFor(x => x.age)</td>
        </tr>

        <tr>
            <td></td>
            <td><input type="submit" value="@ViewBag.TB" /></td>
        </tr>
    </table>

    <table style="background-color:lightskyblue;color:black;width:800px">
        <tr style="background-color:black;color:white">
            <th>Employee ID</th>
            <th>Employee Name</th>
            <th>Employee Email</th>
            <th>Employee Password</th>
            <th>Employee Age</th>
            <th>Action</th>
            <th>Action</th>
        </tr>
        @foreach (var a in ViewBag.regdata)
        {
            <tr>
                <td>@a.rid</td>
                <td>@a.name</td>
                <td>@a.email</td>
                <td>@a.password</td>
                <td>@a.age</td>
                <td>@Html.ActionLink("Delete", "Del", new { rid = a.rid })</td>
                <td>@Html.ActionLink("Edit", "Create", new { rid = a.rid })</td>
            </tr>
        }
    </table>


}

